{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@domain": ["./src/domain"],
      "@domain/*": ["./src/domain/*"],
      "@infra": ["./src/infrastructure"],
      "@infra/*": ["./src/infrastructure/*"],
      "@presentation": ["./src/presentation"],
      "@presentation/*": ["./src/presentation/*"],
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}